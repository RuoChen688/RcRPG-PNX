<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>RcRPG.Main</groupId>
    <artifactId>RcRPG</artifactId>
    <version>1.0.4-MOT</version>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <repositories>
        <repository>
            <id>jitpack.io</id>
            <url>https://www.jitpack.io</url>
        </repository>
        <repository>
            <id>repo-lanink-cn</id>
            <url>https://repo.lanink.cn/repository/maven-public/</url>
        </repository>
    </repositories>

    <build>
        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.2</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>

        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>cn.nukkit</groupId>
            <artifactId>Nukkit</artifactId>
            <version>MOT-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>1.18.24</version>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>me.onebone</groupId>
            <artifactId>economyapi</artifactId>
            <version>2.0.2</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/lib/EconomyAPI-2.0.2.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>net.player.PlayerPoint</groupId>
            <artifactId>playerPoints</artifactId>
            <version>1.2.9</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/lib/PlayerPoints_v1.2.9.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>RcNPC.Main</groupId>
            <artifactId>RcNPC</artifactId>
            <version>1.0.0</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/lib/RcNPC.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>com.smallaswater.npc.RsNPC</groupId>
            <artifactId>RsNPC</artifactId>
            <version>2.4.0</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/lib/RsNPC-2.4.1-PNX.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>com.smallaswater.littlemonster.LittleMonsterMainClass</groupId>
            <artifactId>LittleMonster</artifactId>
            <version>1.7.1-SNAPSHOT</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/lib/LittleMonster_v1.7.1-SNAPSHOT.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>RcEntity.Main</groupId>
            <artifactId>RcEntity</artifactId>
            <version>1.0.0</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/lib/RcEntity.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>healthapi.HealthMainClass</groupId>
            <artifactId>HealthAPI</artifactId>
            <version>1.3.1</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/lib/healthapi_v1.3.1.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>tip</groupId>
            <artifactId>rstips</artifactId>
            <version>2.1.8</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/lib/Tips-2.1.8.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>cn.ankele.plugin.MagicItem</groupId>
            <artifactId>MagicItem</artifactId>
            <version>1.0.0</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/lib/MagicItem-1.1.0.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>me.iwareq.fakeinventories.FakeInventories</groupId>
            <artifactId>FakeInventories</artifactId>
            <version>1.1.5</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/lib/FakeInventories-1.1.5.jar</systemPath>
        </dependency>
    </dependencies>
</project>